# Name of target controller 
LIBDIR		?= ..

MCU_TARGET	?= atmega644p
MCU_FREQ	?= 12000000 

OPTIMIZE	?= -Os
DEFS		?= -DF_CPU=$(MCU_FREQ)
DEFS		+= -Wall -Werror
DEFS		+= -fpack-struct -fshort-enums
DEFS		+= -funsigned-bitfields -funsigned-char

LIBDIRS	= $(addprefix $(LIBDIR)/lib,$(LIBLIST) $(LIB))
SUBDIRS += $(LIBDIRS)

LIBS	+= $(addprefix -L./,$(LIBDIRS)) $(addprefix -l$,$(LIB))
INCS	+= $(addprefix -I./,$(LIBDIRS))

# compiler
override CFLAGS=$(INCS) -g $(DEFS)       \
	-mmcu=$(MCU_TARGET) $(OPTIMIZE)  \
	-Wa,-ahlms=$(firstword           \
	$(filter %.lst, $(<:.c=.lst)))
override CXXFLAGS=$(INCS) -g $(DEFS)     \
	-mmcu=$(MCU_TARGET) $(OPTIMIZE)  \
	-Wa,-ahlms=$(firstword           \
	$(filter %.lst, $(<:.cpp=.lst)))

# Archiver
ARFLAGS=rcs

##### executables ####
CC=avr-gcc
CXX=avr-g++
AR=avr-ar
REMOVE=rm -f

##### automatic target names ####
LIBTRG=$(LIBNAME).a

# List all object files we need to create
CFILES=$(filter %.c, $(LIBSRC))
CPPFILES=$(filter %.cpp, $(LIBSRC))
OBJS=$(CFILES:.c=.o) $(CPPFILES:.cpp=.o)

# Define all lst files.
LST=$(filter %.lst, $(OBJS:.o=.lst))

.SUFFIXES : .cpp .c .o .h

.PHONY: clean

# Make targets:
all: $(LIBTRG)

$(LIBTRG): $(OBJS) 
	$(AR) $(ARFLAGS) $(LIBTRG) $(OBJS)

#### Generating object files ####
.c.o: 
	$(CC) $(CFLAGS) -c $< -o $@

.cpp.o:
	$(CXX) $(CXXFLAGS) -c $< -o $@

#### Dependency ####
-include $(OBJS:.o=.d)

%.d: %.c
	@set -e; rm -f $@; \
	$(CC) -MM $(CFLAGS) $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$

%.d: %.cpp
	@set -e; rm -f $@; \
	$(CXX) -MM $(CXXFLAGS) $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$

#### Cleanup ####
clean:
	$(REMOVE) $(LIBTRG) $(OBJS) $(LST) $(OBJS:.o=.d)

